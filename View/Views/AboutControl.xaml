
<UserControl
    x:Class="MVVM_Template.View.AboutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MVVM_Template.ViewModel;assembly=ViewModel"
    Width="auto"
    Height="auto"
    Margin="0,10,0,0"
    DataContext="{Binding ShowData, Source={StaticResource Locator}}"
    FontSize="14">
    <UserControl.Resources />
    <Grid>
        <TextBlock
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="This is the About Control"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
