
<UserControl
    x:Class="MVVM_Template.View.ShowDataControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MVVM_Template.ViewModel;assembly=ViewModel"
    Width="auto"
    Height="auto"
    Margin="0,10,0,0"
    DataContext="{Binding ShowData, Source={StaticResource Locator}}"
    FontSize="14">
    <UserControl.Resources />
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Width="340"
                    Height="23"
                    Margin="5,5,0,5"
                    Text=""
                    TextWrapping="Wrap" />
                <Button
                    Width="55"
                    Height="23"
                    Margin="3,5,0,5"
                    Content="Post" />
            </StackPanel>
            <Button
                Width="70"
                Height="23"
                Margin="5,5,5,0"
                HorizontalAlignment="Left"
                Content="Clear All" />
            <DataGrid
                Width="400"
                Height="130"
                Margin="5,3,5,5" />
        </StackPanel>
    </Grid>
</UserControl>
